{{#each this}}
    <tr>
        <th>
          <div class="table__thumb table__thumb--name">
            <div class="table__icon">
              <svg width="30px" height="30px">
                <use href="./src/images/icons.svg#lightbulb_outline"></use>
              </svg>
            </div>
            <div class="table__text">{{name}}</div>
          </div>
        </th>
        <th>
          <div class="table__thumb table__thumb--created">{{created}}</div>
        </th>
        <th>
          <div class="table__thumb table__thumb--category">{{category}}</div>
        </th>
        <th>
          <div class="table__thumb table__thumb--content">{{content}}</div>
        </th>
        <th>
          <div class="table__thumb table__thumb--dates">{{#if dates}} {{dates.[0]}}, {{dates.[1]}} {{/if}}</div>
        </th>
        <th>
          <div id="note-ctrl-btns"  class="table__thumb table__thumb--buttons" data-id={{id}}>
            <button type="button" class="table__button" name="edit">
                <i class="fa-solid fa-pen fa-lg"></i>
            </button>
            <button type="button" class="table__button" name="archive">
                <i class="fa-solid fa-box-archive fa-lg"></i>
            </button>
            <button type="button" class="table__button" name="remove">
                <i class="fa-solid fa-trash fa-lg"></i>
            </button>
          </div>
        </th>
      </tr>
{{/each}}